@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "EditHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("EditHeading", "Heading", FormMethod.Post))
{
<form class="form-group">
    Başlık
    @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.HeadingName, "", new { @class = "text-danger" })
    <br /><br />
    Tarih
    @Html.TextBoxFor(x => x.HeadingDate, new { @class = "form-control", Tye="Date" })
    @Html.ValidationMessageFor(x => x.HeadingDate, "", new { @class = "text-danger" })
    <br /><br />
    Kategori
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CategoryID, "", new { @class = "text-danger" })
    <br /><br />
    Yazar
    @Html.DropDownListFor(x => x.WriterID, (List<SelectListItem>)ViewBag.wrt, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.WriterID, "", new { @class = "text-danger" })
    @Html.HiddenFor(x => x.HeadingID)
    <br /><br />
    <button class="btn btn-info">Kaydet</button>
</form>
}

