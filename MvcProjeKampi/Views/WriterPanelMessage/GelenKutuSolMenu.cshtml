
<div class="col-md-3">
    <a href="/WriterPanelMessage/NewMessage/" class="btn btn-primary btn-block mb-3">Yeni Mesaj Oluştur</a>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Folders</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <ul class="nav nav-pills flex-column">                
                <li class="nav-item active">
                    <a href="/WriterPanelMessage/Inbox" class="nav-link">
                        <i class="fas fa-inbox"></i> Gelen Mesajlar
                        <span class="badge bg-primary float-right">@ViewBag.sayi1</span>
                    </a>
                </li>
                <li class="nav-item active">
                    <a href="/WriterPanelMessage/Read" class="nav-link">
                        <i class="fas fa-inbox"></i> Okunmuş Mesajlar
                        <span class="badge bg-primary float-right">@ViewBag.sayi5</span>
                    </a>
                </li>
                <li class="nav-item active">
                    <a href="/WriterPanelMessage/Unread" class="nav-link">
                        <i class="fas fa-inbox"></i> Okunmamış Mesajlar
                        <span class="badge bg-primary float-right">@ViewBag.sayi6</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/WriterPanelMessage/SendBox" class="nav-link">
                        <i class="far fa-envelope"></i> Gönderilen Mesajlar
                        <span class="badge bg-primary float-right">@ViewBag.sayi2</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/WriterPanelMessage/Draft" class="nav-link">
                        <i class="far fa-file-alt"></i> Taslaklar
                        <span class="badge bg-primary float-right">@ViewBag.sayi3</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/WriterPanelMessage/Trash" class="nav-link">
                        <i class="far fa-trash-alt"></i> Çöp Kutusu
                        <span class="badge bg-primary float-right">@ViewBag.sayi4</span>
                    </a>
                </li>
            </ul>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Diğer</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="far fa-circle text-danger"></i>
                        Önemliler
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="far fa-circle text-warning"></i> Tanıtımlar
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="far fa-circle text-primary"></i>
                        Sosyal Medya
                    </a>
                </li>
            </ul>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>
