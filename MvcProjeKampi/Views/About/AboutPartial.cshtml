<button class="btn btn-primary" data-toggle="modal" data-target="#myModal">Yeni Hakkımızda Girişi</button>

<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Yeni Hakkımızda Girişi</h3>
                <button type="button" class="close">&Chi;</button>
            </div>

            <form method="post" action="/About/AddAbout/">
                <div class="modal-body">
                    <div class="form-group">
                        Hakkımıda Metin 1
                        <input type="text" name="AboutDetails1" class="form-control" />
                    </div>
                    <div class="form-group">
                        Hakkımıda Metin 2
                        <input type="text" name="AboutDetails2" class="form-control" />
                    </div>
                    <div class="form-group">
                        Hakkımıda Görsel 1
                        <input type="text" name="AboutImage1" class="form-control" />
                    </div>
                    <div class="form-group">
                        Hakkımıda Görsel 2
                        <input type="text" name="AboutImage2" class="form-control" />
                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-primary" type="submit">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>
